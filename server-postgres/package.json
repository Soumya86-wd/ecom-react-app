{
  "name": "server-postgres",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "nodemon --watch ./ --exec tsx ./server.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "prisma db seed",
    "lint:db": "eslint ./db",
    "lint:src": "eslint ./src",
    "lint": "npm run lint:db && npm run lint:src"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase": "^11.1.0",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.1",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.19.0"
  },
  "prisma": {
    "schema": "./db/prisma/schema.prisma",
    "seed": "tsx ./db/prisma/seed.ts"
  }
}
